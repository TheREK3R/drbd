# Generated by Chef for <%= node[:fqdn] %>

resource <%= @mount %> {
  device    <%= node['drbd']['dev'] %>;
  disk      <%= node['drbd']['disk'] %>;
  meta-disk internal;
  on <%= node.name %> {
    address   <%= node.ipaddress %>:<%= node['drbd']['port'] %>;
  }
  on <%= node['drbd']['remote_host'] %> {
    address   <%= node['drbd']['remote_ip'] %>:<%= node['drbd']['port'] %>;
  }
}
